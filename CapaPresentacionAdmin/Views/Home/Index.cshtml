@{
    ViewBag.Title = "Home Page";
}

<h1 class="mt-4">Dashboard</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Dashboard</li>
</ol>


<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Clientes</h6>
                        <h6 id="totalCliente">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fa fa-user fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Ventas</h6>
                        <h6 id="totalVenta">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fa fa-shopping-bag fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-secondary text-white mb-4">
            <div class="card-body">

                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad Productos</h6>
                        <h6 id="totalProducto">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fa fa-boxes fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-tags me-1"></i>
        Historial de Ventas
    </div>
    <div class="card-body">
        <form action="@Url.Action("ExportarVenta", "Home")" method="post"> 
            <div class="row align-items-end">
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha de Inicio:</label>
                        <input class="form-control" type="text" id="txtFechaInicio" name="fechaInicio" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha de Fin:</label>
                        <input class="form-control" type="text" id="txtFechaFin" name="fechaFin" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Id Transaccion:</label>
                        <input class="form-control" type="text" id="txtIdTransaccion" name="idTrasaccion" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-primary" id="btnBuscar" type="button"><i class="fas fa-search"></i> Buscar</button>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-success" type="submit"><i class="fas fa-file-excel"></i> Exportar</button>
                    </div>
                </div>

            </div>
        </form>
        <hr />

        <div class="row">
            <div class="col-sm-12">
                <table id="tabla" class="display cell-border" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Fecha Venta</th>
                            <th>Cliente</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th>Id Transaccion</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script>

        var dataTabla;

        $(document).ready(function () {

        $("#txtFechaInicio").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", new Date());
        $("#txtFechaFin").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", new Date());

            jQuery.ajax({
                url: "@Url.Action("VistaDashboard", "Home")",
                type: "GET",
                    dataType: "json",
                contentType: "application/json; charset= utf-8",
                success: function (data) {

                    let datos = data.resultado;

                    $("#totalCliente").text(datos.TotalCliente);
                    $("#totalVenta").text(datos.Totalventa);
                    $("#totalProducto").text(datos.TotalProducto);
                },
                error: function (error) {
                    console.log(error);
                }

            });

        //string FechaInio, string FechaFin, string IdTransaccion
        //Url Buscar
        var url = "@Url.Action("ListaReporte", "Home")" +
            "?FechaInio= " + $("#txtFechaInicio").val() +
        "&FechaFin= " + $("#txtFechaFin").val() +
        "&IdTransaccion= " + $("#txtIdTransaccion").val()

         dataTabla = $("#tabla").DataTable({

            responsive: true,
            ordering: false,
            "ajax": {
                 url: url,
                 type: "GET",
                dataType: "json",
                contentType: "application/json"
            },
            "columns":
                [

                    { "data": "FechaVenta"},
                    { "data": "Cliente"},
                    { "data": "Producto" },
                    { "data": "Precio" },
                    { "data": "Cantidad" },
                    { "data": "Total" },
                    { "data": "IdTransaccion" }

                ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
            }

        });
        }); 

        $("#btnBuscar").on("click", function () {

            var url_nueva = "@Url.Action("ListaReporte", "Home")" +
            "?FechaInio= " + $("#txtFechaInicio").val() +
            "&FechaFin= " + $("#txtFechaFin").val() +
            "&IdTransaccion= " + $("#txtIdTransaccion").val()

            dataTabla.ajax.url(url_nueva).load();

        });

    </script>
}
